<Window x:Class="WPFClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Messenger" Height="500" Width="876" Name="Messenger"
        xmlns:local="clr-namespace:WPFClient"
        xmlns:res="clr-namespace:WPFClient.Properties" MinWidth="640" MinHeight="450">
    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Background="LightGray">
            <ToolBar>
                <Button Name="CreateMessageButton" Margin="5">
                    <StackPanel>
                        <Image Source="Images\mail.png"></Image>
                        <Label Content="{x:Static res:Resources.NewMessageLable}"></Label>
                    </StackPanel>
                </Button>
                <Separator></Separator>
                <Button Name="ReplyMessageButton" Margin="5">
                    <StackPanel>
                        <Image Source="Images\mail_forward.png"></Image>
                        <Label Content="{x:Static res:Resources.ReplyMessageLable}"></Label>
                    </StackPanel>
                </Button>
                <Button Name="DeleteMessageButton" Margin="5">
                    <StackPanel>
                        <Image Source="Images\mail_delete.png"></Image>
                        <Label Content="{x:Static res:Resources.DeleteMessageLable}"></Label>
                    </StackPanel>
                </Button>
            </ToolBar>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>          
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel Name="Sidebar" Grid.Column="0"/>
            <DataGrid Name="MessageList" Grid.Column="1" Margin="5" AutoGenerateColumns="False" SelectionChanged="OnMessageListSelectionChanged" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Path=SenderUsername, Mode=OneWay}" Header="{x:Static res:Resources.SenderUsernameColumn}"></DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Path=Date}" Header="{x:Static res:Resources.DateColumn}"></DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Path=Title}" Header="{x:Static res:Resources.TitleColumn}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>        
            <local:MessageControl x:Name="MessageControl" Grid.Column="2" />
        </Grid>
    </Grid>
</Window>
