<?xml version="1.0"?>
<configuration>
	<system.serviceModel>
		<services>
			<service name="DBWcfService.Service1" behaviorConfiguration="MyBehavior">
				<endpoint address="" binding="basicHttpBinding" contract="DBWcfService.IService1"/>
				<endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange"/>
			</service>
		</services>
		<behaviors>
			<serviceBehaviors>
				<behavior name="MyBehavior">
					<serviceMetadata httpGetEnabled="True"/>
				</behavior>
			</serviceBehaviors>
		</behaviors>
	</system.serviceModel>
  <connectionStrings>
    <add name="DB" providerName="System.Data.SqlClient" connectionString="server=localhost;database=MessengerDB;Integrated Security=SSPI" />
  </connectionStrings>
	<system.web>
		<compilation debug="true"/>
  </system.web>
</configuration>
