<Window x:Class="WPFClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Messenger" Height="462" Width="917" Name="Messenger"
        xmlns:MyDll ="clr-namespace:Entities;assembly=Entities">
    <Grid>        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>           
        </Grid.ColumnDefinitions>
        <TreeView Name="Folders" Grid.Column="0" Margin="5">            
            <TreeViewItem Name="InboxFolder" Header="Inbox" Margin="5" Selected="InboxFolder_Selected"></TreeViewItem>
            <TreeViewItem Name="SentFolder" Header="Sent" Margin="5" Selected="SentFolder_Selected"></TreeViewItem>
            <TreeViewItem Name="DeletedFolder" Header="Deleted" Margin="5" Selected="DeletedFolder_Selected"></TreeViewItem>
            <Button Margin="5">New mail</Button>
            <Button Margin="5" Click="Loguot_Click">Log out</Button>
        </TreeView> 
        <DataGrid Name="MessageList" Grid.Column="1" SelectionChanged="MessageList_SelectionChanged" Margin="5" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=SenderUsername}" Header="SenderUsername" Width="auto"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Path=Date}" Header="Date"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Path=Title}" Header="Title"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>        
        <Grid Name="Message" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Name="MessageAttributes" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Label Name="SenderLable" Grid.Column="0" Grid.Row="0" Margin="5">Sender</Label>
                <Label Name="RecipientLable" Grid.Column="0" Grid.Row="1" Margin="5">Recipient</Label>
                <Label Name="DateLable" Grid.Column="0" Grid.Row="2" Margin="5">Date</Label>
                <Label Name="TitleLable" Grid.Column="0" Grid.Row="3" Margin="5">Title</Label>
                <TextBox Name="SenderTextbox" Grid.Column="1" Grid.Row="0" Margin="5" IsReadOnly="True" />          
                <ScrollViewer Grid.Column="1" Grid.Row="1" MaxHeight="100">
                    <TextBox Name="RecipientTextbox" Margin="5" IsReadOnly="True" TextWrapping="Wrap" />
                </ScrollViewer>      
                <TextBox Name="DateTextbox" Grid.Column="1" Grid.Row="2" Margin="5" IsReadOnly="True" />
                <ScrollViewer Grid.Column="1" Grid.Row="3" MaxHeight="100">
                    <TextBox Name="TitleTextbox" Grid.Column="1" Grid.Row="3" Margin="5" IsReadOnly="True" />
                </ScrollViewer>
            </Grid>
            <TextBox Name="MessageContent" Grid.Row="1" FontSize="12" Margin="5" IsReadOnly="True" >Здесь будет текст сообшения</TextBox>
            <StackPanel Grid.Row="2" HorizontalAlignment="Right"
                       Orientation="Horizontal" MinHeight="40">
                <Button Margin="5" Padding="5">Reply</Button>
                <Button Margin="5" Padding="5">Delete</Button>
                <Button Margin="5" Padding="5" Visibility="Collapsed">Send</Button>
            </StackPanel>           
        </Grid>
    </Grid>
</Window>
