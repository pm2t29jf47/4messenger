<Window x:Class="WPFClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Messenger" Height="500" Width="876" Name="Messenger"
        xmlns:local="clr-namespace:WPFClient"
        xmlns:res="clr-namespace:WPFClient.Properties" MinWidth="640" MinHeight="450">
    <Window.Resources>
        <Style x:Key="MarginStyle">
            <Setter Property="Control.Margin" Value="5"></Setter>
        </Style>
    </Window.Resources>
    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Background="LightGray">
            <ToolBar>
                <Button Name="CreateMessageButton" 
                        Click="OnCreateMessageButtonClick"
                        Style="{StaticResource MarginStyle}">
                    <StackPanel>
                        <Image Source="Images\mail.png"></Image>
                        <Label Content="{x:Static res:Resources.NewMessageLabel}"></Label>
                    </StackPanel>
                </Button>
                <Separator></Separator>
                <Button Name="ReplyMessageButton"
                        Click="OnReplyMessageButtonClick"
                        Style="{StaticResource MarginStyle}">      
                    <StackPanel>
                        <Image Source="Images\mail_forward.png"></Image>
                        <Label Content="{x:Static res:Resources.ReplyMessageLabel}"></Label>
                    </StackPanel>
                </Button>
                <Button Name="DeleteMessageButton" 
                        Click="OnDeleteMessageButtonClick"
                        Style="{StaticResource MarginStyle}">
                    <StackPanel>
                        <Image Source="Images\mail_delete.png"></Image>
                        <Label Content="{x:Static res:Resources.DeleteMessageLabel}"></Label>
                    </StackPanel>
                </Button>
            </ToolBar>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>          
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel Name="Sidebar" Grid.Column="0"/>
            <DataGrid Name="MessageList" 
                      Grid.Column="1" 
                      AutoGenerateColumns="False" 
                      SelectionChanged="OnMessageListSelectionChanged" 
                      IsReadOnly="True"
                      Style="{StaticResource MarginStyle}">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Path=SenderUsername, Mode=OneWay}" 
                                        Header="{x:Static res:Resources.SenderUsernameColumn}"
                                        Width="1*"></DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Path=Date}" 
                                        Header="{x:Static res:Resources.DateColumn}"
                                        Width="1*"></DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Path=Title}" 
                                        Header="{x:Static res:Resources.TitleColumn}"
                                        Width="1*"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>        
            <local:MessageControl x:Name="MessageControl" 
                                  Grid.Column="2" />
        </Grid>
    </Grid>
</Window>
