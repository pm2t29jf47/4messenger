<Window x:Class="WPFClient.MessageCreator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{x:Static res:Resources.MessageCreatorTitle}" Height="462" Width="634"
        xmlns:local="clr-namespace:WPFClient"
        xmlns:res="clr-namespace:WPFClient.Properties">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <local:MessageControl x:Name="MessageControl1" Grid.Row="0"></local:MessageControl>
        <Button Grid.Row="1" HorizontalAlignment="Right" Margin="5" Click="SendMessageClick">
            <StackPanel Orientation="Horizontal">
                <Image Source="Images\mail_delete.png"></Image>
                <Label Content="{x:Static res:Resources.SendMessageLable}"></Label>
            </StackPanel>
        </Button>
    </Grid>
</Window>
