<Window x:Class="WPFClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Messenger" Height="462" Width="917" Name="Messenger"
        xmlns:local="clr-namespace:WPFClient">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>   
        <local:ToolbarControl Grid.Row="0"></local:ToolbarControl>        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>          
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>           
            </Grid.ColumnDefinitions>     
            <DataGrid Name="MessageList" Grid.Column="0" Margin="5" AutoGenerateColumns="False" SelectionChanged="MessageList_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Path=SenderUsername}" Header="SenderUsername" Width="auto"></DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Path=Date}" Header="Date"></DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Path=Title}" Header="Title"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>        
            <local:MessageControl x:Name="MessageControl1" Grid.Column="1">
            </local:MessageControl>
        </Grid>
    </Grid>
</Window>
